@page
@model WebApp.Pages_Control_Pets.CreateModel

@{
    ViewData["Title"] = "Add Your Pet";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Pet.Animal" class="form-label"></label>
                    <input asp-for="Pet.Animal" class="form-control" required />
                    <span asp-validation-for="Pet.Animal" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Pet.Breed" class="form-label"></label>
                    <input asp-for="Pet.Breed" class="form-control" required />
                    <span asp-validation-for="Pet.Breed" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Pet.Name" class="form-label"></label>
                    <input asp-for="Pet.Name" class="form-control" required />
                    <span asp-validation-for="Pet.Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Pet.Password" class="form-label"></label>
                    <input asp-for="Pet.Password" class="form-control" type="password" required />
                    <span asp-validation-for="Pet.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Pet.Owner" class="form-label"></label>
                    <input asp-for="Pet.Owner" class="form-control" required />
                    <span asp-validation-for="Pet.Owner" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Pet.Age" class="form-label"></label>
                    <input asp-for="Pet.Age" class="form-control" type="number" required />
                    <span asp-validation-for="Pet.Age" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            <div class="text-center mt-3">
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}