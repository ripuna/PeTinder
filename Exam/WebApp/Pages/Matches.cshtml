@page
@model WebApp.Pages.Matches

@{
    ViewData["Title"] = "My Matches";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (Model.MyMatches == null || !Model.MyMatches.Any())
            {
                <div class="alert alert-info text-center">
                    No Matches at the moment, YOU HAVE 0 LIKES :'(
                </div>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var pet in Model.MyMatches)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong><a href="@("/Pet?id=" + pet!.Id + "&mine=" + Model.Id)" class="text-decoration-none">@pet.Name</a></strong>
                                <span class="text-muted">owned by @pet.Owner</span>
                            </div>
                            <a href="@("/Pet?id=" + pet!.Id + "&mine=" + Model.Id)" class="btn btn-primary btn-sm">View</a>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>